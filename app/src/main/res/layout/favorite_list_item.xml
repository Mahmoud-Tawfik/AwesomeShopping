<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/catalog_item_height"
    android:paddingStart="@dimen/catalog_item_padding"
    android:paddingEnd="@dimen/catalog_item_padding"
    android:focusable="true"
    android:orientation="vertical">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/catalog_item_content_height"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            style="@style/AppTheme.primary_text.medium"
            tools:text="List Name"/>

        <View
            android:id="@+id/divider"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/divider_margin_horizontal"
            android:layout_marginEnd="@dimen/divider_margin_horizontal"
            android:layout_marginTop="@dimen/divider_margin_vertical"
            android:layout_marginBottom="@dimen/divider_margin_vertical"
            android:background="@color/divider"/>

        <ImageButton
            android:id="@+id/added_fav"
            android:layout_width="@dimen/catalog_item_content_height"
            android:layout_height="@dimen/catalog_item_content_height"
            android:src="@drawable/ic_favorite"
            android:background="@android:color/transparent"
            android:contentDescription="@string/content_description_added_to_fav"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"/>

</LinearLayout>