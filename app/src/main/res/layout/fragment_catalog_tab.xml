<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.t3.android.awesomeshopping.CatalogTabFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/catalog_items_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/ad_height"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager">
    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/no_items_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:text="@string/no_items_hint"
        style="@style/AppTheme.primary_text.medium"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone"/>

</FrameLayout>
