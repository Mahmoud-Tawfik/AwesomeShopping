<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="coordinatorLayoutStyle">@style/Widget.Design.CoordinatorLayout</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="FirebaseUI.AuthMethodPicker.Logo" parent="AppTheme.NoActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.TranslucentStatus" parent="AppTheme">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>


    <style name="AppTheme.primary_text" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.primary_text.big" parent="AppTheme.primary_text">
        <item name="android:textSize">25sp</item>
    </style>
    <style name="AppTheme.primary_text.medium" parent="AppTheme.primary_text">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="AppTheme.primary_text.small" parent="AppTheme.primary_text">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AppTheme.secondary_text" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="AppTheme.secondary_text.big" parent="AppTheme.secondary_text">
        <item name="android:textSize">25sp</item>
    </style>
    <style name="AppTheme.secondary_text.medium" parent="AppTheme.secondary_text">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="AppTheme.secondary_text.small" parent="AppTheme.secondary_text">
        <item name="android:textSize">15sp</item>
    </style>


    <style name="AppTheme.light_text" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/icons</item>
    </style>


</resources>
